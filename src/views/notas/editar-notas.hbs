<div class="col-md-4 mx-auto">
    <div class="card">   
            <div class="card-header">
                    <h3 class="text-center">Editar Nota</h3>
            </div>
                    <div class="form-group">
                        {{#each error}}
                        <div class="alert alert-danger" role="alert">
                        {{textoerror}}
                        </div>
                        {{/each}}
                    </div>
            <div class="card-body">
                   {{#each info}}
                <form action="/notas/editar-notas/{{ _id }}?_method=PUT" method="POST">
                 <input type="hidden" name="_method" value="PUT">
                        <div class="form-group">
                            <input type="text" id="titulo" name="titulo" class="form-control" placeholder="titulo" value="{{ titulo }}">
                           {{!--  <p>{{ _id }}</p> --}}
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" id="descripcion" class="form-control" placeholder="Descripcion">{{ descripcion }}</textarea>
                        </div>
                        <div class="fomr-group">
                                <a href="/notas" class="btn btn-secondary">Volver</a>
                        </div>
                        <div class="form-control">
                            <button class="btn btn-primary btn-block" type="submit">Editar Nota</button>
                        </div>              
                        </form>
                {{/each}}
            </div>
    </div>
</div>